* {

  margin: 0;

  padding: 0;

  box-sizing: border-box;

  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

}



body {

  background: #f9fbfd;

  display: flex;

  flex-direction: column;

  height: 100vh;

  direction: rtl;

}



.title-bar {

  display: flex;

  justify-content: space-between;

  align-items: center;

  background: #1a365d;

  color: white;

  padding: 14px 24px;

  box-shadow: 0 3px 8px rgba(0,0,0,0.12);

}

.title-bar h1 {

  font-size: 1.5rem;

  font-weight: 600;

}

.controls button {

  background: #3182ce;

  border: none;

  color: white;

  width: 40px;

  height: 40px;

  border-radius: 50%;

  margin-left: 10px;

  cursor: pointer;

  font-size: 16px;

  transition: background 0.2s;

}

.controls button:hover {

  background: #2c5282;

}



.translator {

  display: flex;

  flex: 1;

  padding: 24px;

  gap: 24px;

  max-width: 1300px;

  margin: 0 auto;

  width: 100%;

}



.language-box {

  flex: 1;

  display: flex;

  flex-direction: column;

}

.language-box label {

  margin-bottom: 10px;

  font-weight: bold;

  color: #2d3748;

  text-align: center;

  font-size: 1.1rem;

}

.language-box textarea {

  width: 100%;

  height: 320px;

  padding: 14px;

  border: 1px solid #cbd5e0;

  border-radius: 10px;

  font-size: 17px;

  resize: none;

  direction: rtl;

  line-height: 1.6;

}

#kurdishInput {

  direction: ltr;

  text-align: left;

  font-family: 'Arial', sans-serif;

}



.sidebar {

  position: fixed;

  top: 0;

  right: 0;

  width: 280px;

  height: 100vh;

  background: #edf2f7;

  padding: 24px;

  border-left: 1px solid #e2e8f0;

  overflow-y: auto;

}

.sidebar h2 {

  color: #1a202c;

  margin-bottom: 14px;

}

.sidebar p {

  color: #4a5568;

  margin-bottom: 16px;

  line-height: 1.6;

}

.sidebar ul {

  margin-top: 10px;

}

.sidebar li {

  margin: 8px 0;

  color: #2d3748;

  list-style: none;

  position: relative;

  padding-right: 20px;

}

.sidebar li:before {

  content: "âœ“";

  color: #38a169;

  position: absolute;

  right: 0;

}



@media (max-width: 950px) {

  .translator {

    flex-direction: column;

  }

  .sidebar {

    position: static;

    width: 100%;

    height: auto;

    border: none;

    border-top: 1px solid #e2e8f0;

    margin-top: 20px;

  }

}

